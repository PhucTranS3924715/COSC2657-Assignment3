<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.EditProfileCustomerActivity"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/headingSection"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintWidth="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--    TODO: Remove back icon-->
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:src="@drawable/back_icon"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/voucherHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voucher"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/backImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dataSection"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_box"/>

        <TextView
            android:id="@+id/voucherTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher available"
            android:textColor="#000080"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:padding="8dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/voucherTextView"
            android:layout_marginTop="8dp"
            android:padding="8dp"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>