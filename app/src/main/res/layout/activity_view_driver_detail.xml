<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Admin.ViewDriverDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:id="@+id/driverDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Driver details"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/driverProfilePicture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/profile_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/driverDetailText"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/nameText"
            app:layout_constraintStart_toStartOf="@id/nameText"/>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:text="Name"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/driverProfilePicture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/phoneText"
            app:layout_constraintStart_toStartOf="@id/phoneText"/>

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:text="Phone"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/emailText"
            app:layout_constraintStart_toStartOf="@id/emailText"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:text="Email"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/addressText"
            app:layout_constraintStart_toStartOf="@id/addressText"/>

        <TextView
            android:id="@+id/addressText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:text="Address"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/genderText"
            app:layout_constraintStart_toStartOf="@id/genderText"/>

        <TextView
            android:id="@+id/genderText"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:text="Gender"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/addressText"
            app:layout_constraintTop_toBottomOf="@+id/addressText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Total earnings"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/earningText"
            app:layout_constraintStart_toStartOf="@id/earningText"/>

        <TextView
            android:id="@+id/earningText"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:text="Total earning"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/addressText"
            app:layout_constraintTop_toBottomOf="@+id/addressText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Total trips"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/totalTripText"
            app:layout_constraintStart_toStartOf="@id/totalTripText"/>

        <TextView
            android:id="@+id/totalTripText"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:text="Total trips"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/genderText"
            app:layout_constraintTop_toBottomOf="@+id/genderText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Distance traveled"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/totalDistanceText"
            app:layout_constraintStart_toStartOf="@id/totalDistanceText"/>

        <TextView
            android:id="@+id/totalDistanceText"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:padding="10dp"
            android:text="Total distance"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/earningText"
            app:layout_constraintTop_toBottomOf="@+id/earningText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Reputation point"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/reputationPoint"
            app:layout_constraintStart_toStartOf="@id/totalTripText"/>

        <RatingBar
            android:id="@+id/reputationPoint"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:numStars="5"
            android:rating="3.0"
            android:stepSize="0.1"
            android:progressTint="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalTripText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Car model"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/carModelText"
            app:layout_constraintStart_toStartOf="@id/carModelText"/>

        <TextView
            android:id="@+id/carModelText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:text="Car model"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reputationPoint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="License plate"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/licensePlateText"
            app:layout_constraintStart_toStartOf="@id/licensePlateText"/>

        <TextView
            android:id="@+id/licensePlateText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_text_view"
            android:text="License plate"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/carModelText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>